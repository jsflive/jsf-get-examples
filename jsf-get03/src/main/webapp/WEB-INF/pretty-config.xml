<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.0
            http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.0.xsd">

    <url-mapping id="editProduct">
        <pattern value="/product/#{/\\d+/ id}/edit"/>
        <view-id value="/faces/view/editProduct.xhtml"/>
    </url-mapping>
    
    <url-mapping id="productDetails">
        <pattern value="/product/#{/\\d+/ id}/details"/>
        <view-id value="/faces/view/productDetails.xhtml"/>
    </url-mapping>

    <url-mapping id="productList">
        <pattern value="/products"/>
        <view-id value="/faces/view/productList.xhtml"/>
    </url-mapping>

</pretty-config>